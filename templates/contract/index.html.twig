{% extends 'base.html.twig' %}

{% block title %}Contract List{% endblock %}

{% block body %}
    <h1>Contract List</h1>

    <table class="table table-striped">
        <thead>
            <tr class="row">
                <th>Owner</th>
                <th>File Name</th>
                <th width=142>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr class="row">
                <td>{{ contract.user.fullname }}</td>
                <td>{{ contract.name }}</td>
                <td>
                    {{ include('contract/_delete_form.html.twig') }}
                    <a class="btn btn-primary btn-xs" href="{{ path('contract_sign', {'user_id': contract.user.id,'id': contract.id,'page':'1'}) }}">Sign</a>
                    <a class="btn btn-info btn-xs" href="{{ path('contract_show', {'user_id': contract.user.id,'id': contract.id}) }}">View</a>

                </td>
            </tr>
        {% else %}
            <tr class="row">
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default btn-xs" href="{{ path('user_index') }}">Back to User List</a>
{% endblock %}