{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-striped">
        <tbody>
            <tr class="row">
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr class="row">
                <th>Fullname</th>
                <td>{{ user.fullname }}</td>
            </tr>
            <tr class="row">
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr class="row">
                <th>Birtday</th>
                <td>{{ user.birthday ? user.birthday|date('d/M/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default btn-xs pull-left" href="{{ path('user_index') }}">Back to List</a>    

    <a class="btn btn-primary btn-xs pull-right" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}